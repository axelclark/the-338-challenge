<div class="players-container">
  <table class="players-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Final Ranking</th>
        <th>Points</th>
        <th>Winnings</th>
      </tr>
    </thead>
    <tbody>
      <% @sports_league.fantasy_players.by_name.each do |player| %>
        <tr>
          <td><%= player.name %></td>
          <td class="ranking"><%= player.with_rank %></td>
          <td><%= player.with_points %></td>
          <td><%= player.with_winnings %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
